<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/half_indent"
    android:paddingVertical="@dimen/quarter_indent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_norm"
        android:padding="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/double_indent"
            android:background="@drawable/separator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/item1"
            style="@style/ItemBG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/press"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/def_indent"
            android:paddingStart="@dimen/def_indent"
            app:layout_constraintEnd_toStartOf="@id/item2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="30dp"
                android:paddingStart="@dimen/def_indent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item2"
            style="@style/ItemBG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/press"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/def_indent"
            android:paddingStart="@dimen/def_indent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="30dp"
                android:paddingStart="@dimen/def_indent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item3"
            style="@style/ItemBG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/press"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/def_indent"
            android:paddingStart="@dimen/def_indent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item4"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="30dp"
                android:paddingStart="@dimen/def_indent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item4"
            style="@style/ItemBG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/press"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/def_indent"
            android:paddingStart="@dimen/def_indent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item3">

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="30dp"
                android:paddingStart="@dimen/def_indent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>