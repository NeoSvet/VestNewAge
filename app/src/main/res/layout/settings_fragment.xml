<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starsky_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <CheckBox
                android:id="@+id/cbCheckAuto"
                style="@style/CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_check" />

            <SeekBar
                android:id="@+id/sbCheckTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:max="8"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar"
                android:thumb="@drawable/sb_thumb"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cbCheckSound"
                style="@style/CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notif_sound"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cbCheckVibr"
                style="@style/CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/vibr"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccentLight" />

            <CheckBox
                android:id="@+id/cbPromNotif"
                style="@style/CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/prom_notif" />

            <SeekBar
                android:id="@+id/sbPromTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar"
                android:thumb="@drawable/sb_thumb"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cbPromSound"
                style="@style/CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notif_sound"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cbPromVibr"
                style="@style/CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/vibr"
                android:visibility="gone" />

            <Button
                android:id="@+id/bSyncTime"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/sync_time" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>