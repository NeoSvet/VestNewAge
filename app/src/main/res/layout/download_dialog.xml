<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.DialogTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/field"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label"
        style="@style/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/def_indent"
        android:text="@string/download_alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_height"
        app:layout_constraintBottom_toTopOf="@id/bAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bAll"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/def_indent"
        android:paddingStart="@dimen/double_indent"
        android:paddingTop="@dimen/def_indent"
        android:paddingEnd="@dimen/double_indent"
        android:paddingBottom="@dimen/def_indent"
        android:text="@string/reset_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSize"
        style="@style/Label"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/half_indent"
        app:layout_constraintBottom_toBottomOf="@id/bOk"
        app:layout_constraintEnd_toStartOf="@id/bOk"
        app:layout_constraintStart_toEndOf="@id/bAll"
        app:layout_constraintTop_toTopOf="@id/bOk" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/def_indent"
        android:paddingStart="@dimen/double_indent"
        android:paddingTop="@dimen/def_indent"
        android:paddingEnd="@dimen/double_indent"
        android:paddingBottom="@dimen/def_indent"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>