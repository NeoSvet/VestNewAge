<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/field_rect"
    android:orientation="vertical"
    android:padding="4dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_month"
        android:layout_width="@dimen/date_table_width"
        android:layout_height="wrap_content"
        android:layout_margin="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/half_indent"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="&lt;" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_minus"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/half_indent"
            android:gravity="center"
            android:padding="0dp"
            android:text="â€“" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/def_indent"
            android:paddingVertical="@dimen/half_indent"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plus"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/half_indent"
            android:gravity="center"
            android:padding="0dp"
            android:text="+" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_end"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="&gt;" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/half_indent"
            android:padding="0dp"
            android:text="@android:string/ok" />

    </LinearLayout>
</LinearLayout>
