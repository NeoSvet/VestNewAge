<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/p_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/half_indent"
        android:layout_marginVertical="@dimen/quarter_indent"
        android:background="@drawable/card_bg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_prev_tab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_prev_tab"
            android:scaleType="fitXY"
            android:src="@drawable/left" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent" />

        <ImageButton
            android:id="@+id/btn_next_tab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_next_tab"
            android:scaleType="fitXY"
            android:src="@drawable/right" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_update"
        style="@style/UpdateLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
