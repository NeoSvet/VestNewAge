<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/p_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/half_indent"
        android:layout_marginVertical="@dimen/quarter_indent"
        android:background="@drawable/card_bg"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_prev_tab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_prev_tab"
            android:scaleType="fitXY"
            android:src="@drawable/left" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent" />

        <ImageButton
            android:id="@+id/btn_next_tab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_next_tab"
            android:scaleType="fitXY"
            android:src="@drawable/right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/p_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/half_indent"
        android:layout_marginVertical="@dimen/quarter_indent"
        android:background="@drawable/card_bg"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/p_tab">

        <ImageButton
            android:id="@+id/btn_prev_year"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_prev_year"
            android:scaleType="fitXY"
            android:src="@drawable/left" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent" />

        <ImageButton
            android:id="@+id/btn_next_year"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_next_year"
            android:scaleType="fitXY"
            android:src="@drawable/right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/p_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/half_indent"
        android:layout_marginVertical="@dimen/quarter_indent"
        android:background="@drawable/card_bg"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/p_year">

        <ImageButton
            android:id="@+id/btn_prev_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_prev_month"
            android:scaleType="fitXY"
            android:src="@drawable/left" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent" />

        <ImageButton
            android:id="@+id/btn_next_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_next_month"
            android:scaleType="fitXY"
            android:src="@drawable/right" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_update"
        style="@style/UpdateLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/p_month" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_update" />

</androidx.constraintlayout.widget.ConstraintLayout>