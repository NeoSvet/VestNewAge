<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/content_margin_bottom">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_update"
        style="@style/UpdateLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/quarter_indent"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toTopOf="@id/rv_calendar"
        app:layout_constraintEnd_toEndOf="@id/rv_calendar"
        app:layout_constraintStart_toStartOf="@id/p_year"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/p_year"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/half_indent"
        android:layout_marginTop="@dimen/quarter_indent"
        android:background="@drawable/card_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/rv_calendar"
        app:layout_constraintEnd_toStartOf="@id/p_month"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_update">

        <ImageButton
            android:id="@+id/btn_prev_year"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_prev_year"
            android:scaleType="fitXY"
            android:src="@drawable/left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_next_year"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_next_year"
            android:scaleType="fitXY"
            android:src="@drawable/right"
            app:layout_constraintStart_toEndOf="@id/btn_prev_year"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/div_year"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/btn_next_year" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_year"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_year" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/p_month"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/half_indent"
        android:layout_marginTop="@dimen/quarter_indent"
        android:background="@drawable/card_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/rv_calendar"
        app:layout_constraintEnd_toStartOf="@id/rv_calendar"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/p_year"
        app:layout_constraintTop_toBottomOf="@id/tv_update">

        <ImageButton
            android:id="@+id/btn_prev_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_prev_month"
            android:scaleType="fitXY"
            android:src="@drawable/left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_next_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/press"
            android:contentDescription="@string/to_next_month"
            android:scaleType="fitXY"
            android:src="@drawable/right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/div_month"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/btn_next_month" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_month"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_month" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/half_indent"
        android:layout_marginTop="@dimen/quarter_indent"
        android:background="@drawable/field_trans"
        android:padding="3dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/p_month"
        app:layout_constraintTop_toBottomOf="@id/tv_update"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>