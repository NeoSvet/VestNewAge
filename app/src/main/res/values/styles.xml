<resources>

    <!-- Base application theme. -->
    <style name="Theme.StartTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/starsky_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/big_star</item>
        <item name="postSplashScreenTheme">@style/Theme.MainTheme</item>
    </style>

    <style name="Theme.MainTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#015A82</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="android:textViewStyle">@style/Label</item>
        <item name="popupMenuBackground">@color/colorPrimary</item>
        <item name="android:itemBackground">@drawable/menu_selector</item>
        <item name="android:dropDownListViewStyle">@style/DropListStyle</item>
        <item name="recyclerViewStyle">@style/RecyclerViewStyle</item>
    </style>

    <style name="Theme.DialogTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="TabLayoutTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="tabIndicatorColor">@color/colorAccentLight</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMaxWidth">1000dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="Label">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="CheckBox" parent="Label">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/press</item>
        <item name="android:button">@drawable/check_selector</item>
        <item name="android:drawableLeft">@android:color/transparent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:buttonTint">@android:color/transparent</item>
        <item name="android:buttonTintMode">screen</item>
    </style>

    <style name="CheckedTextView" parent="Label">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/press</item>
    </style>

    <style name="StatusLabel" parent="Label">
        <item name="android:layout_width">154dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="NeoDialog" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:buttonStyle">@style/Label</item>
        <!--buttons color-->
        <item name="colorPrimary">@color/colorAccentLight</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/field</item>
    </style>

    <style name="ItemBG" parent="Label">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="UpdateLabel" parent="ItemBG">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="hintTextColor">@color/colorAccentLight</item>
        <item name="boxStrokeColor">@color/box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/colorAccentLight</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">@dimen/padding_for_clear</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/myriad</item>
    </style>

    <style name="ClearButton">
        <item name="android:layout_width">@dimen/string_size</item>
        <item name="android:layout_height">@dimen/string_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:tint">@color/colorAccentLight</item>
    </style>

    <style name="ButtonCheck" parent="Label">
        <item name="android:background"></item> <!-- во избежание ошибки java.lang.IllegalStateException: Attempted to get ShapeAppearanceModel from a MaterialButton which has an overwritten background.-->
        <item name="backgroundTint">@color/checkbutton_bg</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DropListStyle" parent="AppTheme.PopupOverlay">
        <item name="android:divider">@color/colorAccent</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
