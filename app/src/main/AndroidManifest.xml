<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.neosvet.vestnewage">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SlashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="blagayavest.info"
                    android:pathPrefix="/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!--
                https://vk.com/away.php?utf=1&to=http%3A%2F%2Fblagayavest.info
                /.*blagayavest\.info.*
                -->
                <data
                    android:host="m.vk.com"
                    android:pathPrefix="/away"
                    android:scheme="https" />
                <data
                    android:host="vk.com"
                    android:pathPrefix="/away"
                    android:scheme="https" />
                <data
                    android:host="m.vk.com"
                    android:pathPrefix="/away"
                    android:scheme="http" />
                <data
                    android:host="vk.com"
                    android:pathPrefix="/away"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BrowserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MarkerActivity"
            android:label="@string/marker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PresentationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CabpageActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name=".SummaryReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".PromReceiver" />
        <service android:name=".SummaryReceiver$Service"
            android:process=":summary_check"
            android:icon="@mipmap/ic_launcher"
            android:label="SummaryCheck" />
        <service android:name=".PromReceiver$Service"
            android:process=":prom_timer"
            android:icon="@mipmap/ic_launcher"
            android:label="PromTimer" />
    </application>

</manifest>